        <ignore path="src/main/res/drawable-hdpi/mland_ic_one.png" />
        <ignore path="src/main/res/drawable-xhdpi/mland_ic_one.png" />
        <ignore path="src/main/res/drawable-xxhdpi/mland_ic_one.png" />
