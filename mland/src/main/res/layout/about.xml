<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/fl2"
                        android:layout_width="fill_parent"
                        android:layout_height="280.0dip"
                        android:background="@color/about__dark_blue"
                        android:elevation="12.0dip"
                        android:orientation="vertical">

                        <com.kyler.mland.egg.ui.MLandTextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/overlaycover"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/about"
                            android:textColor="@color/play_drawer_profile_overlay_shade"
                            android:textSize="36.0sp"
                            customfontdemo:fontName="ProductSans-Regular.ttf" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/overlaycover"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/cactus2" />
                        </RelativeLayout>

                    </FrameLayout>


                </RelativeLayout>

                <include layout="@layout/toolbar_actionbar_actually_transparent" />

            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>
    <!-- Nav drawer -->
    <include layout="@layout/mland_base" />
</android.support.v4.widget.DrawerLayout>
