<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kyler.mland.egg">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_splash"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:supportsRtl="true"
        android:theme="@style/Theme.MLand.Base">
        <activity
            android:name=".MLandBase"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MLandOriginalActivity"
            android:excludeFromRecents="false"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:icon="@drawable/icon_splash"
            android:label="@string/mland"
            android:launchMode="singleTask"
            android:process=":sweetsweetdesserts"
            android:screenOrientation="locked"
            android:theme="@style/Theme.MLand">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.android.internal.category.PLATLOGO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MLandModifiedActivity"
            android:excludeFromRecents="false"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:icon="@drawable/icon_splash"
            android:label="@string/mland"
            android:launchMode="singleTask"
            android:process=":sweetsweetdessertsTwo"
            android:screenOrientation="locked"
            android:theme="@style/Theme.MLand">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.android.internal.category.PLATLOGO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:hardwareAccelerated="true"
            android:icon="@drawable/icon_splash"
            android:label="@string/about"
            android:theme="@style/Theme.MLand.About"></activity>
    </application>

</manifest>
